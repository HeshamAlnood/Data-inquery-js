<div
  id="main"
  class="text-center"
  style="padding-left:600px;width:50%;padding-top:200px;margin-left:400px;"
>

  <main
    class="form-signin"
    style="width:65%;background-color:azure;border-radius:5%;height:25%;border-style:solid;border-width: 1px;"
  >
    <form>
      <h1 style="padding-top: 30px;color:blue;padding-bottom:30px;">
        Login
      </h1>

      <div id="inputLogin" class="form-floating" style="">
        <div id="userLogin" class="form-floating mb-3">

          <input
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="User"
          />
          <label for="floatingInput">UserName</label>
        </div>

        <div id="userLogin" class="form-floating mb-3">

          <input
            type="password"
            class="form-control"
            id="floatingPassword"
            placeholder="Password"
          />
          <label for="floatingPassword">Password</label>
        </div>
        <div>
          <button
            id="loginButton"
            class="w-100 btn btn-lg btn-primary"
            type="submit"
          >Login</button>
        </div>

      </div>

    </form>

  </main>
</div>